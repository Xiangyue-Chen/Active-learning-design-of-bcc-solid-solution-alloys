import pandas as pd
import numpy as np
import matplotlib.pyplot as plt
from sklearn.model_selection import KFold
from sklearn.metrics import mean_squared_error
from sklearn.neighbors import KNeighborsRegressor
from sklearn.preprocessing import StandardScaler
from bayes_opt import BayesianOptimization

file_path = r'/content/yield_strength.xlsx'
data = pd.read_excel(file_path)

X = data.iloc[:, 1:-1]
y = data.iloc[:, -1]

scaler = StandardScaler()
X = scaler.fit_transform(X)

def train_model(n_neighbors):
    params = {
        'n_neighbors': int(round(n_neighbors)),
        'weights': 'distance',
        'algorithm': 'auto',
    }
    model = KNeighborsRegressor(**params)
    
    all_rmse_results = []
    
    for seed in range(40, 50):
        kf = KFold(n_splits=5, shuffle=True, random_state=seed)
        for train_idx, test_idx in kf.split(X):
            X_train, X_test = X[train_idx], X[test_idx]
            y_train, y_test = y.iloc[train_idx], y.iloc[test_idx]
            model.fit(X_train, y_train)
            y_pred = model.predict(X_test)
            rmse = np.sqrt(mean_squared_error(y_test, y_pred))
            all_rmse_results.append(rmse)
    
    mean_rmse = np.mean(all_rmse_results)
    return -mean_rmse

bounds = {
    'n_neighbors': (1, 30)
}

optimizer = BayesianOptimization(
    f=train_model,
    pbounds=bounds,
    random_state=42
)

optimizer.maximize(init_points=20, n_iter=200)

results_df = pd.DataFrame([{
    'target': res['target'],
    **res['params']
} for res in optimizer.res])
results_df = results_df.sort_values(by='target', ascending=False)
results_df.to_excel('KNN_optimization_results.xlsx', index=False)

best_params = optimizer.max['params']
best_model = KNeighborsRegressor(
    n_neighbors=int(round(best_params['n_neighbors'])),
    weights='distance',
    algorithm='auto',
)

all_rmse_results = []
all_y_true = []
all_y_pred = []

for seed in range(40, 50):
    kf = KFold(n_splits=5, shuffle=True, random_state=seed)
    for train_idx, test_idx in kf.split(X):
        X_train, X_test = X[train_idx], X[test_idx]
        y_train, y_test = y.iloc[train_idx], y.iloc[test_idx]
        best_model.fit(X_train, y_train)
        y_pred = best_model.predict(X_test)
        rmse = np.sqrt(mean_squared_error(y_test, y_pred))
        all_rmse_results.append(rmse)
        all_y_true.extend(y_test)
        all_y_pred.extend(y_pred)

mean_rmse = np.mean(all_rmse_results)
std_rmse = np.std(all_rmse_results)

print(f"RMSE = {mean_rmse:.4f} Â± {std_rmse:.4f}")

plt.figure(figsize=(6,6))
plt.scatter(all_y_true, all_y_pred, alpha=0.7)
plt.plot([min(all_y_true), max(all_y_true)], [min(all_y_true), max(all_y_true)], 'r--')
plt.xlabel("True Yield Strength")
plt.ylabel("Predicted Yield Strength")
plt.title("Predicted vs True Yield Strength (Optimized - KNN with Bayesian Optimization)")
plt.grid(True)
plt.tight_layout()
plt.show()
